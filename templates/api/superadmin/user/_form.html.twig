<div class="max-w-2xl mx-auto bg-white shadow-xl rounded-xl p-8 border border-gray-200">
    {{ form_start(form) }}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {{ form_row(form.name, {
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' }
        }) }}
        {{ form_row(form.email, {
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' }
        }) }}
        {{ form_row(form.login, {
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' }
        }) }}
        {{ form_row(form.password, {
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' }
        }) }}
        {{ form_row(form.telegramChatId, {
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' }
        }) }}
        {{ form_row(form.role, {
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' }
        }) }}

        {# for manual change date of create and update #}
{#        {{ form_row(form.createdAt, {#}
{#            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg' }#}
{#        }) }}#}
{#        {{ form_row(form.updatedAt, {#}
{#            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg' }#}
{#        }) }}#}
    </div>

    <div class="mt-8 text-center">
        <button type="submit"
                class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 shadow-md transition">
            {{ button_label|default('Save') }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
