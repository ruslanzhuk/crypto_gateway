<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Panel{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        #flash-container {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 9999;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .flash-message {
            min-width: 300px;
            max-width: 500px;
            padding: 15px 20px;
            margin-bottom: 10px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            position: relative;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            opacity: 1;
            transition: all 0.5s ease-in-out;
        }

        .flash-message.error {
            background-color: #dc3545; /* —á–µ—Ä–≤–æ–Ω–∏–π (—è–∫ –≤ AdminLTE) */
        }

        .flash-close {
            position: absolute;
            top: 5px;
            right: 10px;
            border: none;
            background: transparent;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
    {% block stylesheets %}
    {% endblock %}
</head>
<body class="bg-gradient-to-br from-purple-50 via-gray-100 to-purple-50 min-h-screen text-gray-900">
<div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-xl p-4 hidden md:block border-r border-gray-200">
        <div class="text-xl font-semibold mb-8 text-purple-700"><a href="{{ path("app_dashboard") }}">CRYPTOGreenmanageR</a></div>
        <div id="clock" class="text-sm text-gray-500 mb-6"></div>
        <nav class="flex flex-col gap-2 text-sm">
            <a href="{{ path('app_transaction_index') }}" class="hover:bg-purple-100 p-2 rounded transition">Transactions</a>
            <a href="{{ path('app_wallet_index') }}" class="hover:bg-purple-100 p-2 rounded transition">Wallets</a>
            {% if is_granted('ROLE_SUPERADMIN') %}
                <a href="{{ path('app_user_index') }}" class="hover:bg-purple-100 p-2 rounded transition">Users</a>
            {% endif %}

            <hr class="my-4 border-gray-200">

            <a href="{{ path('app_user_show', {"id": app.user.id}) }}" class="hover:bg-purple-100 p-2 rounded transition text-gray-700">
                üë§ My Account
            </a>

            <form method="post" action="{{ path('logout') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('logout') }}">
                <button type="submit" class="text-left w-full hover:bg-red-100 text-red-700 p-2 rounded transition">
                    üîí Log out
                </button>
            </form>
        </nav>
    </aside>

    <!-- Main content -->
    <main class="flex-1 p-8">
        <div id="flash-container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-message {{ label }}">
                        <span>{{ message }}</span>
                        <button class="flash-close" onclick="this.parentElement.remove()">‚úñ</button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="bg-white shadow border border-gray-200 rounded-lg p-6">
            {% block body %}{% endblock %}
        </div>
    </main>
</div>

<script>
    function updateClock() {
        const now = new Date();
        const timeStr = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        document.getElementById('clock').textContent = 'üïí ' + timeStr;
    }
    setInterval(updateClock, 1000);
    updateClock();

    setTimeout(function () {
        document.querySelectorAll('.flash-message').forEach(function (el) {
            el.style.transform = 'translateY(-100px)';
            el.style.opacity = '0';
            setTimeout(() => el.remove(), 600); // –≤–∏–¥–∞–ª—è—î–º–æ –ø—ñ—Å–ª—è –∞–Ω—ñ–º–∞—Ü—ñ—ó
        });
    }, 5000);
</script>
</body>
</html>