{% extends 'dashboard/dashboard_base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="bg-gray-50 min-h-screen p-6">
        <div class="max-w-6xl mx-auto">
            <!-- Header -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
                    üë§ {{ user.name }}
                </h1>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                   class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg shadow transition duration-200">
                    ‚öô Settings
                </a>
            </div>

            <!-- User Card -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
                <div class="grid grid-cols-1 md:grid-cols-2">
                    <div class="p-6 space-y-4">
                        <div>
                            <span class="font-semibold text-gray-600">ID:</span>
                            <span class="ml-2">{{ user.id }}</span>
                        </div>
                        <div>
                            <span class="font-semibold text-gray-600">Email:</span>
                            <span class="ml-2">{{ user.email }}</span>
                        </div>
                        <div>
                            <span class="font-semibold text-gray-600">Login:</span>
                            <span class="ml-2">{{ user.login }}</span>
                        </div>
                        <div>
                            <span class="font-semibold text-gray-600">Telegram Bots:</span>
                            <a href="{{ path('app_bot_manager') }}" class="ml-2 text-purple-600 hover:underline">
                                View Bots
                            </a>
                        </div>
                    </div>
                    <div class="p-6 space-y-4 bg-gray-50">
                        <div>
                            <span class="font-semibold text-gray-600">Created At:</span>
                            <span class="ml-2">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</span>
                        </div>
                        <div>
                            <span class="font-semibold text-gray-600">Updated At:</span>
                            <span class="ml-2">{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</span>
                        </div>
                        <div>
                            <span class="font-semibold text-gray-600">Password:</span>
                            <span class="ml-2 text-red-500 italic">Hidden</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="flex justify-between mt-6">
                <a href="{{ path('app_user_index') }}" class="text-blue-600 hover:text-blue-800 underline">
                    ‚Üê Back to list
                </a>
                {{ include('dashboard/user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}