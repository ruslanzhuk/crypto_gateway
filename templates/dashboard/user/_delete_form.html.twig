<form method="post"
      action="{{ path('app_user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this user?');"
      class="inline-block"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit"
            class="bg-red-600 hover:bg-red-700 text-white font-semibold px-4 py-2 rounded-lg shadow-md transition duration-150 ease-in-out"
    >
        🗑️ Delete
    </button>
</form>