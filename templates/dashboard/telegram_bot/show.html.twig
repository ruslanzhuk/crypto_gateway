{% extends 'dashboard/dashboard_base.html.twig' %}

{% block title %}Bot ‚Äî {{ telegram_bot_integration.botName }}{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto">
        <!-- –ó–∞–≥–æ–ª–æ–≤–æ–∫ -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
                ü§ñ {{ telegram_bot_integration.botName }}
                <span class="text-lg text-gray-500">@{{ telegram_bot_integration.botUsername }}</span>
            </h1>
            <div class="flex gap-3">
                <a href="{{ path('app_bot_manager_edit', {'id': telegram_bot_integration.id}) }}"
                   class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
                    ‚úèÔ∏è Edit
                </a>
                {{ include('dashboard/telegram_bot/_delete_form.html.twig') }}
            </div>
        </div>

        <!-- –Ü–Ω—Ñ–æ –ø—Ä–æ –±–æ—Ç–∞ -->
        <div class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
                <div>
                    <dt class="font-semibold text-gray-600">Bot Token</dt>
                    <dd class="text-gray-900 break-all">{{ telegram_bot_integration.botToken }}</dd>
                </div>
                <div>
                    <dt class="font-semibold text-gray-600">Is Verified</dt>
                    <dd>
                        {% if telegram_bot_integration.isVerified %}
                            <span class="text-green-600 font-medium">‚úîÔ∏è Yes</span>
                        {% else %}
                            <span class="text-red-600 font-medium">‚ùå No</span>
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="font-semibold text-gray-600">Is Active</dt>
                    <dd>
                        {% if telegram_bot_integration.isActive %}
                            <span class="text-green-600 font-medium">‚úÖ Active</span>
                        {% else %}
                            <span class="text-gray-500 font-medium">‚õî Inactive</span>
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="font-semibold text-gray-600">Created At</dt>
                    <dd class="text-gray-900">
                        {{ telegram_bot_integration.createdAt ? telegram_bot_integration.createdAt|date('Y-m-d H:i:s') : '' }}
                    </dd>
                </div>
            </dl>
        </div>

        <!-- –°–ø–∏—Å–æ–∫ —á–∞—Ç—ñ–≤ -->
        <div class="mt-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">üí¨ Group Chats</h2>
            {% if chats|length > 0 %}
                <ul class="space-y-3">
                    {% for chat in chats %}
                        <li>
                            <a href="#"
{#                            <a href="{{ path('app_bot_chat_show', {'id': chat.id}) }}"#}
                               class="block p-4 bg-white rounded-xl shadow hover:shadow-lg hover:bg-purple-50 transition transform hover:-translate-y-1">
                                <div class="font-semibold text-gray-800">{{ chat.username }}</div>
                                <div class="text-sm text-gray-500">ID: {{ chat.chatId }}</div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-500 italic">This bot is not in any chats yet.</p>
            {% endif %}
        </div>

        <!-- –ö–Ω–æ–ø–∫–∞ –Ω–∞–∑–∞–¥ -->
        <div class="mt-8">
            <a href="{{ path('app_bot_manager') }}"
               class="inline-block px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition">
                ‚¨Ö Back to list
            </a>
        </div>
    </div>
{% endblock %}
