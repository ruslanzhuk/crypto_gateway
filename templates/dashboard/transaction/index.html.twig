{% extends 'dashboard/dashboard_base.html.twig' %}

{% block title %}Transactions{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold">Transactions</h1>
{#            <a href="{{ path('app_transaction_new') }}"#}
{#               class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-xl shadow">#}
{#                + Create New#}
{#            </a>#}
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white rounded-xl shadow-md overflow-hidden">
                <thead class="bg-gray-100 text-left text-sm uppercase font-semibold text-gray-600">
                <tr>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">Tx Hash</th>
                    <th class="px-4 py-3">Crypto</th>
                    <th class="px-4 py-3">Auto</th>
                    <th class="px-4 py-3">Received Crypto</th>
                    <th class="px-4 py-3">Expired At</th>
                    <th class="px-4 py-3">Created</th>
                    <th class="px-4 py-3">Actions</th>
                </tr>
                </thead>
                <tbody class="text-sm text-gray-800">
                {% for transaction in transactions %}
                    <tr class="border-b hover:bg-gray-50 transition">
                        <td class="px-4 py-3">{{ transaction.id }}</td>
                        <td class="px-4 py-3">{{ transaction.txHash }}</td>
                        <td class="px-4 py-3">{{ transaction.amountCrypto }}</td>
                        <td class="px-4 py-3">
                            {% if transaction.isAutomatic %}
                                <span class="text-green-600 font-semibold">Yes</span>
                            {% else %}
                                <span class="text-red-600 font-semibold">No</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3">{{ transaction.receivedAmountCrypto }}</td>
                        <td class="px-4 py-3">
                            {{ transaction.expiredAt ? transaction.expiredAt|date('Y-m-d H:i:s') : '—' }}
                        </td>
                        <td class="px-4 py-3">
                            {{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '—' }}
                        </td>
                        <td class="px-4 py-3 space-x-2">
                            <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}"
                               class="text-blue-600 hover:underline">Show</a>
                            <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"
                               class="text-yellow-600 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10" class="px-4 py-6 text-center text-gray-500 italic">
                            No transactions found.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
