{% extends 'admin/admin_base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-3xl bg-white shadow-xl rounded-lg p-8">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">User Details</h1>

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <tbody class="divide-y divide-gray-100 text-sm text-gray-700">
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold w-1/3">ID</th>
                        <td class="py-2">{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold">Name</th>
                        <td class="py-2">{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold">Email</th>
                        <td class="py-2">{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold">Login</th>
                        <td class="py-2">{{ user.login }}</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold">Password</th>
                        <td class="py-2 text-red-500 italic">Hidden for security</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold">Telegram Chat ID</th>
                        <td class="py-2">{{ user.telegramChatId }}</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold">Created At</th>
                        <td class="py-2">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 pr-4 font-semibold">Updated At</th>
                        <td class="py-2">{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="flex justify-between mt-8">
                <a href="{{ path('app_user_index') }}"
                   class="text-blue-600 hover:text-blue-800 text-sm underline">
                    ‚Üê Back to list
                </a>

                <div class="flex gap-3">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                       class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg shadow-sm text-sm">
                        Edit
                    </a>

                    {{ include('admin/user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}