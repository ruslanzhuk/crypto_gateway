{% extends 'admin/admin_base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-semibold">Users</h1>
        <a href="{{ path('app_user_new') }}" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
            + Create New
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-700 border border-gray-200 rounded-lg">
            <thead class="bg-gray-100 text-gray-700 uppercase text-xs">
            <tr>
                <th class="px-4 py-2">ID</th>
                <th class="px-4 py-2">Name</th>
                <th class="px-4 py-2">Email</th>
                <th class="px-4 py-2">Login</th>
                <th class="px-4 py-2">Telegram</th>
                <th class="px-4 py-2">Created</th>
                <th class="px-4 py-2">Updated</th>
                <th class="px-4 py-2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="border-t hover:bg-gray-50 transition">
                    <td class="px-4 py-2">{{ user.id }}</td>
                    <td class="px-4 py-2">{{ user.name }}</td>
                    <td class="px-4 py-2">{{ user.email }}</td>
                    <td class="px-4 py-2">{{ user.login }}</td>
                    <td class="px-4 py-2">{{ user.telegramChatId }}</td>
                    <td class="px-4 py-2">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : '' }}</td>
                    <td class="px-4 py-2">{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i') : '' }}</td>
                    <td class="px-4 py-2 flex gap-2">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}"
                           class="text-blue-600 hover:underline">Show</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                           class="text-yellow-600 hover:underline">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center py-4 text-gray-500">No users found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
