{% extends 'admin/admin_base.html.twig' %}

{% block title %}Wallet{% endblock %}
{% block body %}
    <div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-2xl shadow-md">
        <h1 class="text-2xl font-bold mb-6">Wallet #{{ wallet.id }}</h1>

        <div class="grid grid-cols-1 gap-4 text-sm">
            <div>
                <span class="font-semibold">Public Address:</span>
                <span class="text-gray-800 break-all">{{ wallet.publicAddress ?? '—' }}</span>
            </div>
            <div>
                <span class="font-semibold">Private Key:</span>
                <span class="text-red-600 break-all font-mono">{{ wallet.privateKey ?? '—' }}</span>
            </div>
            <div>
                <span class="font-semibold">Seed Phrase:</span>
                <span class="text-yellow-700 break-words font-mono">{{ wallet.seedPhrase ?? '—' }}</span>
            </div>
            <div>
                <span class="font-semibold">Created At:</span>
                <span>{{ wallet.createdAt ? wallet.createdAt|date('Y-m-d H:i:s') : '—' }}</span>
            </div>
        </div>

        <div class="flex items-center gap-4 mt-8">
            {% include 'admin/components/back_button.html.twig' with {
                fallback_route: 'app_wallet_index'
            } %}
{#            <a href="{{ path('app_wallet_edit', {'id': wallet.id}) }}" class="text-yellow-600 hover:underline">✎ Edit</a>#}
{#            {{ include('api/admin/wallet/_delete_form.html.twig') }}#}
        </div>
    </div>
{% endblock %}
